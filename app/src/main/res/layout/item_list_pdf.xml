<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdf_check"
        android:button="@drawable/checkbox_selector"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:buttonTint="@color/gray"
        android:checked="true"
        android:text=""/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_picture_as_pdf_black_24dp"
        android:tint="@color/pink_primary"
        android:layout_toRightOf="@+id/pdf_check"
        android:id="@+id/pdf_icon"
        android:layout_marginRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdf_name"
        tools:text="@tools:sample/full_names"
        android:layout_toRightOf="@+id/pdf_icon"
        android:textColor="@color/textColor"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdf_date"
        tools:text="@tools:sample/date/ddmmyy"
        android:layout_toRightOf="@+id/pdf_icon"
        android:textColor="@color/textColorSecond"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/pdf_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdf_size"
        android:textColor="@color/textColor"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/pdf_date"
        android:textSize="12dp"
        tools:text="798.83KB"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_default"
        android:layout_below="@+id/pdf_icon"
        android:layout_marginTop="12dp"/>

</RelativeLayout>